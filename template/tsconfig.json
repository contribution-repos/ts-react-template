{
  "compilerOptions": {
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": false,
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "node",
    "noResolve": false,
    "paths": {
      "@/*": ["src/*"],
    },
    "removeComments": false,
    "allowJs": false,
    "lib": [
      "ES5",
      "ES2015",
      "ES2018",
      "DOM"
    ],
    "target": "ES5",
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*",
    "globals.d.ts",
  ]
}
